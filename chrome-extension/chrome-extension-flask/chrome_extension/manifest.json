{
  "manifest_version": 3,
  "name": "Text Scraper and Summarizer",
  "version": "1.0",
  "description": "A Chrome extension that scrapes text data from a webpage and summarizes it using an LLM.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"

  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
 
}